<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponentImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/sym_def_app_icon">

        </ImageView>

        <TextView
            android:id="@+id/opponentNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile name">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recOpponent"
                android:layout_width="150dp"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
            <ImageView
                android:layout_width="56dp"
                android:layout_height="53dp"

                android:background="@android:drawable/star_big_on">

            </ImageView>

            <TextView
                android:id="@+id/StarOfOpponent"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="5"
                android:textAlignment="center"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recopponent">
        </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gamePlace"
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/playerImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/sym_def_app_icon"></ImageView>

        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile name">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerrec"
                android:layout_width="150dp"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:background="@android:drawable/star_big_on">

            </ImageView>

            <TextView
                android:id="@+id/StarOfPlayer"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="5"
                android:textAlignment="center"
                android:textSize="15dp">

            </TextView>
    </LinearLayout>
</LinearLayout>
</LinearLayout>